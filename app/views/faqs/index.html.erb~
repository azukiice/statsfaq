
<%= form_tag(faqs_path, :method => "get", :id => "sports_form") do  %>  
    <%= @sports.each do |sport| %>
      
      <%= check_box_tag "selected[#{sport}]", 1, 
	  @selected_ratings.include?(sport) %>
      <%= sport %>
     
    <% end %>

  <div class="actions">
    <%= submit_tag "Filter", :id => "sports_submit"  %>
  </div>
<% end %>
  
  <br>

<section class="faqlist">

  <% unless @faqs.empty? %>
    <%= @faqs.each do |qanda| %>
      <section class="question">
	  Q: <%= qanda.question %>
      </section>
      <section class="answer">
	  A: <%= qanda.answer %>
      </section>
    <% end %>
  <% end %>
</section>
